{
    #
    # 40rspamd
    #

    my $filterCheck = $account->prop('FilterCheck') || 'enabled';

    if ($filterCheck eq 'enabled') {
        $OUT = <<EOF;
[filter-1]
type = Filter_classifier
path = /usr/bin/rspamc
arguments = ("-h", "localhost:11334", "-e", "/usr/bin/grep -x -F 'Action: reject'")
exitcodes_drop = (0, )
exitcodes_keep = (1, )
user = _rspamd
group = _rspamd
EOF
    } else {
        $OUT = '# rspamd filter checks are disabled';
    }
}

