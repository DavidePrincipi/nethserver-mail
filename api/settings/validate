require_once("/usr/libexec/nethserver/api/lib/Helpers.php");

$data = readInput();

$v = new LegacyValidator();
$v->declareParameter('AlwaysBccStatus', Validate::SERVICESTATUS);
if($data['AlwaysBccStatus'] == 'enabled') {
    $v->declareParameter('AlwaysBccAddress', Validate::EMAIL);
}

$v->declareParameter('MessageSizeMax', $v->createValidator(Validate::POSITIVE_INTEGER)->lessThan(1001));
$v->declareParameter('MessageQueueLifetime', $v->createValidator(Validate::POSITIVE_INTEGER)->lessThan(31));

# Validate the input
if ($v->validate()) {
    success();
} else {
    error($v);
}
